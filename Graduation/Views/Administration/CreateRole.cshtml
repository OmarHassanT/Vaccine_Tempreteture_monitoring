@model CreateRoleViewModel
@{ 
    ViewBag.Title = "AddRole";
}
<h1>Create Role</h1>

<form asp-action="createRole" asp-controller="administration" method="post">
    <div class="form-group">
        <label asp-for="RoleName"></label>
        <input asp-for="RoleName"  class="form-control" placeholder="Name of clinic"/>
        <span asp-validation-for="RoleName"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Create</button>
</form>