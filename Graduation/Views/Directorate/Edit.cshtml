@model Directorate
@{
    ViewBag.Title = "Edit Directorater";
}
<div>
    <h1>@ViewBag.Title </h1>
</div>

<form asp-controller="directorate" asp-action="Edit" method="post" class="col-sm-10">
    <input asp-for="DirectorateId" hidden />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Name of Directorate" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Place"></label>
        <input asp-for="Place" class="form-control" placeholder="Name of Place" />
        <span asp-validation-for="Place"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div asp-validation-summary="All">
    </div>
    <div class="row">
        <div class="container">
            <button type="submit" class="btn btn-primary">Update Directorate</button>
            <a class="btn btn-secondary" asp-action="index" asp-controller="directorate">Cancel</a>
        </div>

    </div>
</form>