@model IEnumerable<Directorate>

@{
    ViewBag.Title = "Directorate List";
}

<div class="row">
    <div class="container">
        <h1>  @ViewBag.Title</h1>
        <a class="btn btn-primary float-right mb-3" asp-controller="directorate" asp-action="create">Create Directorate</a>
    </div>
</div>
@if (Model.Count() <= 0)
{<h2 style="color:red"> No Directorates Founded</h2>

}
else
{
    <div >
        @foreach (var directorate in Model)
        {
            <div class="card col-md-12 mb-3 " >
                <div class="card-header text-center">
                    <h3>@directorate.Name</h3>
                </div>
                <div class="card-body text-left">
                    <p>place: @directorate.Place</p>
                    <p>Phone Number: @directorate.PhoneNumber</p>
                </div>
                <div class="card-footer ">
                    <div class="row  justify-content-center">
                        <form method="post" asp-action="Delete" asp-controller="directorate" asp-route-id="@directorate.DirectorateId">
                            <a asp-controller="directorate" asp-action="clinics" asp-route-directoreateId="@directorate.DirectorateId"
                               class="btn btn-primary m-1">View Clinics</a>
                            <a asp-action="Edit" asp-controller="directorate" asp-route-id="@directorate.DirectorateId"
                               class="btn btn-primary m-1">Edit</a>
                            <a asp-action="Details" asp-controller="directorate" asp-route-id="@directorate.DirectorateId"
                               class="btn btn-primary m-1">Details</a>
                            <!--
        <span id="confirmDeleteSpan_@directorate.DirectorateId" style="display:none">
        <span>This will delete all information about directorate including clinics and users. Are you sure you want to delete?</span>
        <button type="submit" class="btn btn-danger">Yes</button>
        <a class="btn btn-primary" onclick="confirmDelete('@directorate.DirectorateId',false)" style="color:white">No</a>
    </span>
    <span id="deleteSpan_@directorate.DirectorateId">
        <a onclick="confirmDelete('@directorate.DirectorateId',true)" class="btn btn-danger" style="color:white">Delete</a>
    </span>

        -->

                            <button type="submit" onclick=" return confirm('This will delete all information about (@directorate.Name) directorate including clinics and users. Are you sure you want to delete?')" class="btn btn-danger">Delete</button>

                        </form>
                    </div>

                </div>
               
            </div>


        }


    </div>
    @section Scripts{
        <script src="~/js/CustomScript.js"></script>
    }
}