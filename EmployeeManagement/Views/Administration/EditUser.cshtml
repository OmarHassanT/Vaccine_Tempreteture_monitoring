@model EditUserViewModel

@{
    ViewBag.Title = "EditUser";
}

<h1>Edit User</h1>


<form method="post" asp-action="EditUser" asp-controller="administration">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Id"></label>
        <input asp-for="Id" disabled class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="ListUsers" asp-controller="administration" class="btn btn-primary">Cancel</a>

    <div class="card mt-3">
        <div class="card-header">
            Users Roles
        </div>
        <div class="card-body">
            @if (Model.Rols.Any())
            {
                @foreach (var role in Model.Rols)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {<h5 class="card-title"> Non at the moment</h5>

            }

        </div>
        <div class="card-footer">
            <a asp-action="ManageUserRole" asp-controller="administration" asp-route-userId="@Model.Id" class="btn btn-primary" style="width:auto">Manage Roles</a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            Users Claims
        </div>
        <div class="card-body">
            @if (Model.claims.Any())
            {
                @foreach (var claim in Model.claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {<h5 class="card-title"> Non at the moment</h5>

            }

        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">Manage Claims</a>
        </div>
    </div>
</form>
