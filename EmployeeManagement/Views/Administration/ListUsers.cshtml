@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "ListUsers";
}

<h1>List Users</h1>
<a asp-action="Register" asp-controller="account" class="btn btn-primary mb-1" style="width:auto">Add user</a>

@if (Model.Any())
{
    @foreach (var user in Model)
    {
        <div class="card mt-3">
            <div class="card-header">
                User ID: @user.Id
            </div>
            <div class="card-body">
                @user.UserName
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@user.Id">
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-secondary">Edit</a>
                    <span id="confirmDeleteSpan_@user.Id" style="display:none" >
                        <span>Are you sure you want to delete?</span>
                        <button type="submit" class="btn btn-danger"  >Yes</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id',false)">No</a>
                    </span>
                    <span id="deleteSpan_@user.Id">
                        <a href="#" onclick="confirmDelete('@user.Id',true)" class="btn btn-danger">Delete</a>
                    </span>
                  
                </form>
               
            </div>
        </div>

    }
}
else
{
    <div class="card">
        <div class="card-header">
            No user created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a asp-action="Register" asp-controller="account" class="btn btn-primary">Add user</a>

        </div>

    </div>
}
@section Scripts{ 
    <script src="~/js/CustomScript.js"></script>
}